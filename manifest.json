{
    "manifest_version": 3,
    "name": "LinkedIn Automation",
    "version": "1.0",
    "description": "Automate LinkedIn connection requests and save profile details.",
    "permissions": [
        "identity",
        "identity.email",
        "tabs",
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://www.googleapis.com/*"
    ],
    "oauth2": {
        "client_id": "1013660501378-eo5rgln8dtel2ti6b80gpga941bvr8n9.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/spreadsheets"
        ]
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "192": "icons/icon192.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://www.linkedin.com/*"],
            "js": ["content.js"]
        }
    ],
    "commands": {
        "start-automation-cmd": {
            "suggested_key": {
                "default": "Ctrl+Shift+1"
            },
            "description": "Start LinkedIn Automation"
        },
        "start-insert-cmd": {
            "suggested_key": {
                "default": "Ctrl+Shift+2"
            },
            "description": "Insert Data to Google Sheet"
        },
        "start-statusupdate-cmd": {
            "suggested_key": {
                "default": "Ctrl+Shift+3"
            },
            "description": "Update Status in Google Sheet (FIXME: Doesn't work though)"
        }
    }
}
